<h2>Create Your Real Time Reviews Account</h2>

    <% @errors  && @errors.each do |m| %>
    <li><%=m%></li>
    <%end%>
    
    <form  action="/signup" method="post">
    <p>Username: <input type="text" name="user[username]"></p>
    <p>Password: <input type="password" name="user[password]"></p>
    <button type="submit" class="btn btn-primary btn-block btn-large">Let's get reviewing!</button>
    </form>